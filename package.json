{
  "name": "wakalat-al-istithmar",
  "version": "1.0.0",
  "description": "Wakalat Al Istithmar is a Web application that facilitates the recruitment of jobseekers via online career portal.",
  "main": "index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon ./src/server.ts",
    "dev_prod": "cross-env NODE_ENV=development node ./dist/server.js",
    "devback": "cross-env NODE_ENV=devback nodemon ./src/server.ts",
    "devback_prod": "cross-env NODE_ENV=devback node ./dist/server.js",
    "prod": "cross-env NODE_ENV=production node ./dist/server.js",
    "build": "tsc -p . && tsc-alias -p tsconfig.json && yarn copy-templates",
    "copy-templates": "cpx \"src/templates/**/*\" dist/templates/",
    "format": "prettier --write \"src/**/*.ts\"",
    "db:generate": "drizzle-kit generate",
    "db:migrate:dev": "cross-env NODE_ENV=development ts-node src/drizzle/migrate.ts",
    "db:migrate:devback": "cross-env NODE_ENV=devback ts-node src/drizzle/migrate.ts",
    "db:migrate:prod": "cross-env NODE_ENV=production ts-node src/drizzle/migrate.ts"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/connect-pg-simple": "^7.0.3",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.2.0",
    "colors": "^1.4.0",
    "connect-pg-simple": "^9.0.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.3",
    "drizzle-orm": "^0.30.8",
    "express": "^4.21.1",
    "express-session": "^1.18.0",
    "fs": "^0.0.1-security",
    "handlebars": "^4.7.8",
    "jsonwebtoken": "^9.0.2",
    "moment-timezone": "^0.5.45",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.13",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.11.5",
    "postgres": "^3.4.4",
    "uuid": "^11.0.3",
    "verifalia": "^5.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/express-session": "^1.18.0",
    "@types/handlebars": "^4.1.0",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.7",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.15",
    "@types/passport": "^1.0.17",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/pg": "^8.11.5",
    "cpx": "^1.5.0",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.21.1",
    "nodemon": "^3.0.2",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5"
  },
  "packageManager": "yarn@1.22.22+sha1.ac34549e6aa8e7ead463a7407e1c7390f61a6610"
}
